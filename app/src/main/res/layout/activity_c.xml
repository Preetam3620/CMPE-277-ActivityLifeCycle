<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="100dp">

    <TextView
        android:id="@+id/textC"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="This is Activity C"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textCDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity C occupies the complete window real-estate. The Android OS forces Activity A to be paused. However, the background thread keep incrementing the counter." />

    <Button
        android:id="@+id/finishC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish C" />
</LinearLayout>